# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:mac)

platform :mac do
  desc "Build and sign for App Store distribution"
  lane :release do
    # Sync code signing certificates for App Store
    match(
      type: "appstore",
      platform: "macos"
    )

    # Build the macOS app for App Store
    upload_to_app_store
  end
end

platform :ios do
  desc "Build and sign iOS app for App Store distribution"
  lane :release do
    # Sync code signing certificates
    match(
      type: "appstore",
      platform: "ios"
    )
    upload_to_app_store
  end
end
