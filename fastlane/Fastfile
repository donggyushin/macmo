# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:mac)

platform :mac do
  desc "Build and sign for distribution"
  lane :release do
    match(platform: "macos")
    build_mac_app(
      workspace: "macmo.xcworkspace",
      scheme: "macmo",
      configuration: "Release",
      output_directory: "./build",
      # export_method: "developer-id",
      export_method: "development"
    )
  end
end

platform :ios do
  desc "Build and sign iOS app for distribution"
  lane :release do
    match(type: "appstore", platform: "ios")
    build_app(
      workspace: "macmo.xcworkspace",
      scheme: "macmo",
      configuration: "Release",
      output_directory: "./build",
      export_method: "app-store"
    )
  end

  desc "Build iOS app for development"
  lane :dev do
    match(type: "development", platform: "ios")
    build_app(
      workspace: "macmo.xcworkspace",
      scheme: "macmo",
      configuration: "Debug",
      output_directory: "./build",
      export_method: "development"
    )
  end
end
